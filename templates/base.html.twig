<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}
			<!-- CSS only -->
			<link rel="stylesheet" href="https://bootswatch.com/4/lumen/bootstrap.min.css">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" integrity="sha512-HK5fgLBL+xu6dm/Ii3z4xhlSUyZgTT9tuc/hSrtw6uzJOvgRr2a9jyxxT1ely+B+xFAmJKVSTbpM/CuL7qxO8w==" crossorigin="anonymous"/>

		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<a class="navbar-brand" href="{{ path('accueil') }}">SymfonySchool</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarColor01">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Classes</a>
						<div class="dropdown-menu">
							<a class="dropdown-item" href="{{ path('classe') }}">Voir les classes</a>
							<a class="dropdown-item" href="{{ path('newClasse') }}">Ajouter une nouvelle classe</a>
						</div>
					</li>
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Elèves</a>
						<div class="dropdown-menu">
							<a class="dropdown-item" href="{{ path('eleve') }}">Voir tous les élèves</a>
							<a class="dropdown-item" href="{{ path('newEleve') }}">Créer un nouvel élève</a>
						</div>
					</li>

				</ul>
			</div>
		</nav>

		<div class="container" style="padding-top: 25px"> {% block body %}{% endblock %}

			</div>
			{% block javascripts %}
				<!-- JavaScript Bundle with Popper -->
				<script src="https://bootswatch.com/_vendor/jquery/dist/jquery.min.js"></script>
				<script src="https://bootswatch.com/_vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
			{% endblock %}
		</body>
	</html>

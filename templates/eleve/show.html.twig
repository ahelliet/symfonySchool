{% extends 'base.html.twig' %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path('accueil') }}">Accueil</a>
		</li>
		<li class="breadcrumb-item">
			<a href="{{ path('eleve') }}">Tous les élèves</a>
		</li>
		<li class="breadcrumb-item">{{ eleve.nom }}
			{{eleve.prenom}}</li>
	</ol>

	<div class="card mb-3">
		<h3 class="card-header">
			<a href="{{ path('showClasse', {'id': eleve.classe.id}) }}">{{eleve.classe.nom}}</a>
		</h3>
		<svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveaspectratio="xMidYMid slice" viewbox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
			<rect width="100%" height="100%" fill="#868e96"></rect>
			<text x="50%" y="50%" fill="#dee2e6" dy=".3em">Profil img</text>
		</svg>
		<div class="card-body">
			<p class="card-text">
				<strong>{{eleve.moyenne}}/20</strong>
			</p>
			<p class="card-text">{{eleve.appreciation}}</p>
		</div>
		<div class="card-body">
			<a href="{{ path('editEleve', {'id': eleve.id}) }}" class="card-link">
				<i class="far fa-edit"></i>
				Modifier l'élève</a>
			<a href="{{ path('deleteEleve', {'id': eleve.id}) }}" class="card-link text-danger">
				<i class="far fa-trash-alt"></i>
				Supprimer</a>
		</div>
	</div>

{% endblock %}
